.person
    &__list
        list-style none
        padding 0
        margin 0
    &__item
        display inline-block
        width 100%
        margin-bottom 10px
        padding 20px
        border solid 1px #565656
    &__header
        float left
    &__name
        width 100%
    &__avatar
        width 128px
        height 128px
        background #ccc
        margin-right 20px
        border solid 5px #fff
        box-shadow 0px 0px 10px rgba(0,0,0,0.3)
    &__info
        float left
    &__info-list
        list-style none
        padding 0
        margin 0
    &__info-item
        display block
        margin-bottom 10px
    &__label
        font-weight bold